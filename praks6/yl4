#!/bin/bash
# Skript väljastab arvude 1 kuni 20 kohta, kas iga arv on algarv või mitte.

for (( arv=1; arv<=20; arv++ ))
do
  if (( arv < 2 )); then
    echo "$arv - ei ole algarv"
    continue
  fi

  jagaja=2
  on_algarv=1

  while (( jagaja < arv ))
  do
    if (( arv % jagaja == 0 )); then
      on_algarv=0
      break
    fi
    jagaja=$((jagaja + 1))
  done

  if (( on_algarv == 1 )); then
    echo "$arv - on algarv"
  else
    echo "$arv - ei ole algarv"
  fi
done
